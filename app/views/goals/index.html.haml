#product_list
  %table
    %tr
      %th Description
      %th
    - @goals.each do |goal|
      %tr{:class => cycle('list_line_odd', 'list_line_even')}
        %td.list_description
          %dl
            %dt= link_to goal.title, goal
            %dd= truncate(strip_tags(goal.description), :length => 800)
        %td.list_actions
          = link_to 'Edit', edit_goal_path(goal)
          = link_to 'Destroy', goal, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New Goal', new_goal_path
