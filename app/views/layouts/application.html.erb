<head>
   <title>GoalDigr : Delete Facebook.  Meet Winners.</title>
   <link rel="stylesheet" href="http://yui.yahooapis.com/2.8.0r4/build/reset-fonts-grids/reset-fonts-grids.css" type="text/css">
   <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/2.8.2r1/build/base/base-min.css">
   <%= stylesheet_link_tag :all %>
   <%= javascript_include_tag :defaults %>
   <%= csrf_meta_tag %>
</head>
<body>
			
			
<div id="doc3" class="yui-t2">
	<div id="hd">
		<p class="theheader">
			<span class="alignleft"><span class="servicetitle">GoalDigr</span> Delete Facebook.  Meet Winners.</span>
			<% if @username then %>
			<span class="alignright"><strong><%= @username %></strong> | <a href="">My account</a> | <%= link_to 'Sign out', session_path, :method => :delete %>
			<% end %>
		</p>
	</div>
	<div id="bd">
			
			<div id="yui-main">
				<div class="yui-b">
					<div class="yui-g">
						<div class="main_content">
							<%= yield %>
						</div>
					</div>
				</div>
			</div>
			<div class="yui-b left-hand-menu">
					<p>&nbsp;</p>
					<p class="left-hand-menu_unread"><%= link_to 'Missions', missions_path %></p>
					<p class="left-hand-menu_unread"><%= link_to 'Goals', goals_path %></p>
					<ul>
					<% if @nav_goals then @nav_goals.each do |goal| %>
					<li><%= link_to goal.title, goal %></li>
					<% end end %>
					</ul>
			</div>
	</div>
	<div id="ft">
		<p align="center">Footer here.</p>
	</div>
</div>

</body>
</html>
